<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#453B68"
	android:orientation="vertical">

	<TextView
		android:id="@+id/again"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="?selectableItemBackground"
		android:drawablePadding="12dp"
		android:gravity="center_vertical"
		android:paddingStart="12dp"
		android:paddingEnd="12dp"
		android:text="Reset to defaults"
		android:textColor="#ffffff"
		android:textSize="18sp"
		app:drawableStartCompat="@drawable/ic_360"
		app:drawableTint="#ffffff"
		tools:ignore="HardcodedText" />

	<com.goodayapps.widget.ToothyProgress
		android:id="@+id/toothyProgressBuilder"
		android:layout_width="match_parent"
		android:layout_height="120dp"
		app:isBuilderMode="true" />

	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/add"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="?selectableItemBackgroundBorderless"
		app:srcCompat="@drawable/ic_round_add_24" />

	<TextView
		android:id="@+id/uploadToDemo"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_marginTop="12dp"
		android:background="?selectableItemBackground"
		android:drawablePadding="12dp"
		android:gravity="center_vertical"
		android:paddingStart="12dp"
		android:paddingEnd="12dp"
		android:text="Load into demo player"
		android:textColor="#ffffff"
		android:textSize="18sp"
		app:drawableStartCompat="@drawable/ic_round_arrow_downward_24"
		app:drawableTint="#ffffff"
		tools:ignore="HardcodedText" />

	<com.goodayapps.widget.ToothyProgress
		android:id="@+id/toothyProgressDemo"
		android:layout_width="match_parent"
		android:layout_height="120dp"
		app:progress=".5"
		app:progressBackgroundColor="#959595"
		app:progressBackgroundWidth="3dp"
		app:progressColor="#ffffff"
		app:progressWidth="3dp"
		app:strokeLineCapProgress="square"
		app:strokeLineCapProgressBackground="square"
		app:strokeLineCapTrack="square"
		app:trackColor="#959595"
		app:trackWidth="3dp" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:paddingStart="12dp"
		android:paddingEnd="12dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/play"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:layout_marginEnd="12dp"
			android:background="@drawable/bg_play"
			android:padding="8dp"
			android:tint="#ffffff"
			app:srcCompat="@drawable/ic_play_arrow" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:background="?selectableItemBackground"
			android:drawablePadding="12dp"
			android:gravity="center_vertical"
			android:paddingStart="12dp"
			android:paddingEnd="12dp"
			android:text="Play demo"
			android:textColor="#ffffff"
			android:textSize="18sp"
			tools:ignore="HardcodedText" />

	</LinearLayout>

</LinearLayout>