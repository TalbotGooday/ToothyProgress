<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/again"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_margin="12dp"
		android:layout_marginTop="12dp"
		android:background="@drawable/bg_random"
		android:padding="14dp"
		android:tint="#ffffff"
		app:srcCompat="@drawable/ic_360" />

	<LinearLayout
		android:id="@+id/fractureSeekBars"
		android:layout_width="match_parent"
		android:layout_height="140dp"
		android:background="#4D6C6A70"
		android:minWidth="100dp"
		android:orientation="horizontal"
		android:paddingTop="12dp"
		android:paddingBottom="12dp">

	</LinearLayout>

	<SeekBar
		android:id="@+id/testSeek"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="12dp"
		android:max="100" />

	<com.goodayapps.library.ToothyProgress
		android:id="@+id/toothyProgress"
		android:layout_width="match_parent"
		android:layout_height="80dp" />
</LinearLayout>